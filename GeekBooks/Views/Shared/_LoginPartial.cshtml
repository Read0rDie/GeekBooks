@using Microsoft.AspNet.Identity
<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        @if (User.Identity.IsAuthenticated)
        {
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"> Hello, @User.Identity.Name  <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="@Url.Action("UserProfile", "Account")">Profile</a></li>
                                <li><a href="@Url.Action("LogOff", "Account")">Logout</a></li>
                            </ul>
        }
        else
        {
            @Html.ActionLink("Register", "Register", "Account", null, new { @class = "navbar-brand" })
            @Html.ActionLink("Log In", "Login", "Account", null, new { @class = "navbar-brand" })
        }

</ul>

