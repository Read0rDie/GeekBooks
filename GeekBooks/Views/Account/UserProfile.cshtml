<style>
    .csbutton {
        background-color: #7f8c8d;
        border: 2px solid #7f8c8d;
        border-radius: 50px;
        color: white;
        padding: 10px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        width: 150px;
    }

    .csbutton:hover {
        background-color: white;
        color: #7f8c8d;
        border: 2px solid #7f8c8d;
    }

    .csbutton.ava {
