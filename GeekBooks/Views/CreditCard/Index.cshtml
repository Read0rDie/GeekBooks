@model GeekBooks.Models.UserProfileViewModel
@using Microsoft.AspNet.Identity;
@using GeekBooks.Models



    @{
        CreditCard creditcard = new CreditCard();
    }

    <div class="section">
    <table class="table">
        <tr>            
            <th>
                @Html.DisplayNameFor(model => creditcard.CardName)
            </th>
            <th>
                @Html.DisplayNameFor(model => creditcard.CardNumber)
            </th>   
            <th>
                @Html.DisplayNameFor(model => creditcard.IsPreferred)
            </th>
        </tr>        
        
        @foreach (var item in Model.CreditCardList)
        {   
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CardName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CardNumber)
                </td>
                @if (item.IsPreferred)
                {
                    <td>
                        Yes
                    </td>
                }
                else
                {
                    <td>
                        No
                    </td>
                }
                <td>
                    @Html.ActionLink("Edit", "Edit", "CreditCard", new { id = item.CID }, null) |
                    @Html.ActionLink("Delete", "Delete", "CreditCard", new { id = item.CID }, null)
                </td>
            </tr>            
        }

    </table>
        </div>